<div id="<%= dom_id candidate %>">
  <p>
    <strong>Name:</strong>
    <%= candidate.name %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= image_tag candidate.photo, class: "card-img-top rounded" %>
  </p>

  <p>
    <strong>Profession:</strong>
    <%= candidate.profession %>
  </p>

  <p>
    <strong>Current:</strong>
    <%= candidate.current %>
  </p>

  <p>
    <strong>Position:</strong>
    <%= candidate.position %>
  </p>

</div>
